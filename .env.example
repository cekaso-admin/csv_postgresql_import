# =============================================================================
# Required Settings
# =============================================================================

# Management Database Connection
# PostgreSQL connection for storing project configs, connections, and job monitoring
# This is separate from the per-project databases where CSV data is imported
MANAGEMENT_DATABASE_URL=postgresql://user:password@localhost:5432/management_db

# API Authentication
# Required for all endpoints except /health
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secure-api-key-here

# =============================================================================
# Optional Settings
# =============================================================================

# Connection Pool Settings
DB_POOL_MIN_CONN=1
DB_POOL_MAX_CONN=10

# Import Settings
CSV_CHUNK_SIZE=10000

# API Server Settings
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=*
LOG_LEVEL=INFO
